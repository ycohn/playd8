
<h2>Where are we playing?</h2> 
<h1><%= @playdate.location %></h1>

<h3>Who's Playing?</h3>
<ul>
<% @playdate.kids.each do |kid| %>  
<li><a href=<%="/kids/#{kid.id}"%>><%= kid.name %></a></li>
<% end %>
</ul>


<form action=<%="/playdates/#{@playdate.id}/edit"%> method="get">
 <input type="hidden" name="id" value="<%= @playdate.id %>">
  <p><input type="submit" value="Edit This Playdate"></p>
</form>

<form action=<%="/playdates/delete"%> method="post">
 <input type="hidden" name="id" value="<%= @playdate.id %>">
  <p><input type="submit" value="Delete This Playdate"></p>
</form>